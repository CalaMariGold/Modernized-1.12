// Cleanroom Relauncher configuration
// This file is parsed leniently; comments are allowed and preserved on save.

{
  // Cleanroom version to launch (auto-selected on first run)
  "selectedVersion": "0.3.16-alpha",
  // Latest Cleanroom version seen by the relauncher (informational)
  "latestVersion": "0.3.16-alpha",
  // Preferred Java vendor: "adoptium" (Temurin) or "graalvm" (GraalVM Community JDK).
  // If chosen vendor is unavailable for your OS/arch/version, the relauncher falls back to Adoptium automatically.
  "javaVendor": "graalvm",
  // Java major version to use (e.g., 21). Changing this triggers auto re-download and switch.
  "javaVersion": 24,
  // UI theme: dark mode on/off (default: true). When enabled, all relauncher UI uses a dark theme.
  "darkMode": true,
  // Optional absolute path to a Java executable. Leave null/empty to let the relauncher manage Java automatically.
  "javaPath": "",
  // Optional JVM arguments appended when launching Cleanroom.
  "args": ""
}
